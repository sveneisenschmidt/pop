{
  "name": "pop",
  "version": "1.0.0",
  "description": "Lightweight emoji reaction widget",
  "main": "dist/pop.min.js",
  "type": "module",
  "scripts": {
    "build": "esbuild src/pop.ts --bundle --minify --format=iife --global-name=Pop --outfile=dist/pop.min.js && esbuild styles/pop.css --minify --outfile=dist/pop.min.css",
    "dev": "esbuild src/pop.ts --bundle --format=iife --global-name=Pop --outfile=dist/pop.js --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts && prettier --check src"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.0.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
