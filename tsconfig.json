{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "outDir": "./public",
        "rootDir": "./assets/ts",
        "lib": ["ES2020", "DOM"]
    },
    "include": ["assets/ts/**/*"],
    "exclude": ["node_modules", "public", "tests"]
}
